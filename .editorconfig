# 類型為 EditorConfig 的設定檔案
root = true

# 通用設定（適用於所有檔案類型）
[*]
charset = utf-8            # 檔案編碼為 UTF-8
end_of_line = lf           # 使用換行符 LF (Linux/MacOS 標準)
indent_style = space       # 使用空格縮排
indent_size = 2            # 縮排大小為 2 個空格
insert_final_newline = true # 每個檔案結尾添加一個換行符
trim_trailing_whitespace = true # 移除行尾多餘空格

# HTML 和 CSS 檔案設定
[*.{html,css}]
max_line_length = 120      # 每行最多 120 字符
indent_size = 2            # 縮排大小為 2 個空格

# JavaScript 和 TypeScript 檔案設定
[*.{js,ts}]
max_line_length = 80       # 每行最多 80 字符
indent_size = 2            # 縮排大小為 2 個空格

# JSON 檔案設定
[*.json]
indent_size = 2            # 縮排大小為 2 個空格

# Markdown 檔案設定
[*.md]
trim_trailing_whitespace = false # 保留行尾空格
